<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherAPIApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_blue_back_btn</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Context Menu theme -->
        <item name="popupMenuBackground">@drawable/context_menu_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Theme of Home city dialog. -->
    <style name="MyDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- Theme of the checkbox of the Home city dialog. -->
    <style name="MyCheckboxTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSecondary">#FFF</item>
    </style>
    <!-- Theme of 'Cancel' button of the Home city dialog. -->
    <style name="MyCancelTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#FFF</item>
    </style>
</resources>